---
/* El Footer se gestiona desde el index.astro */
---

<section
  id="games"
  class="games-section relative min-h-screen flex flex-col overflow-visible bg-transparent pt-32"
>
  <div class="absolute inset-0 z-0 pointer-events-none">
    <div class="absolute top-[20%] left-[-10%] w-[50%] h-[50%] bg-[#2b42f4]/15 blur-[130px] rounded-full"></div>
    <div class="absolute top-[40%] left-[30%] w-[40%] h-[40%] bg-[#e60012]/15 blur-[120px] rounded-full"></div>
    <div class="absolute bottom-[10%] right-[-5%] w-[50%] h-[50%] bg-[#107C10]/15 blur-[130px] rounded-full"></div>
    
    <div class="absolute inset-0 bg-gradient-to-b from-[#020202] via-transparent to-[#020202] opacity-90"></div>
  </div>

  <div class="max-w-[1400px] mx-auto px-6 relative z-10 w-full flex-grow">
    <div class="text-center mb-20">
      <h2 class="text-6xl md:text-8xl font-black italic uppercase leading-none text-white">
        ¡Empieza a <br />
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#2b42f4] via-[#e60012] to-[#107C10]">
          Jugar Ya!
        </span>
      </h2>
    </div>

    <div class="grid md:grid-cols-3 gap-8 lg:gap-10 items-center">
      
      <div class="relative bg-white/5 backdrop-blur-sm rounded-2xl p-6 border border-white/10 shadow-2xl">
        <div class="relative z-10">
          <img src="/GCU3/PS5_Gear_ClubUnlimited3_2D_PEGI.png" alt="PS5" class="w-full h-auto rounded-lg shadow-lg mb-8" />
          <p class="text-[#2b42f4] font-bold uppercase tracking-widest text-xs border-t border-white/10 pt-4 text-center">Próximamente disponible</p>
        </div>
      </div>

      <div class="relative bg-white/5 backdrop-blur-sm rounded-2xl p-6 border border-white/10 shadow-2xl">
        <div class="relative z-10">
          <div class="absolute -inset-4 bg-[#e60012]/10 blur-2xl rounded-full opacity-50"></div>
          
          <div class="[perspective:1000px] mb-8">
            <img 
              src="/GCU3/SWITCH_game_3D_PEGI_ITSP.png" 
              alt="Switch 2" 
              class="relative w-full h-auto rounded-lg shadow-lg [transform:rotateY(-25deg)]" 
            />
          </div>
          
          <p class="text-[#e60012] font-bold uppercase tracking-widest text-xs border-t border-white/10 pt-4 text-center drop-shadow-[0_0_8px_rgba(230,0,18,0.4)]">
            Próximamente disponible
          </p>
        </div>
      </div>

      <div class="relative bg-white/5 backdrop-blur-sm rounded-2xl p-6 border border-white/10 shadow-2xl">
        <div class="relative z-10">
          <img src="/GCU3/XBOX_Gear_ClubUnlimited3_2D_PEGI.png" alt="Xbox" class="w-full h-auto rounded-lg shadow-lg mb-8" />
          <p class="text-[#107C10] font-bold uppercase tracking-widest text-xs border-t border-white/10 pt-4 text-center">Próximamente disponible</p>
        </div>
      </div>

    </div>
  </div>
</section>