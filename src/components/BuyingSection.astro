---
import Footer from "./Footer.astro";
---

<section
  id="games"
  class="games-section relative min-h-screen flex flex-col overflow-visible bg-transparent pt-32"
>
  <div class="absolute inset-0 z-0 pointer-events-none">
    <div class="absolute top-[20%] left-[-10%] w-[70%] h-[60%] bg-[#2b42f4]/20 blur-[130px] rounded-full mix-blend-screen"></div>
    <div class="absolute bottom-[20%] right-[-10%] w-[60%] h-[70%] bg-[#107C10]/20 blur-[120px] rounded-full mix-blend-screen"></div>
    <div class="absolute top-[40%] left-[40%] w-[30%] h-[30%] bg-[#faca54]/10 blur-[100px] rounded-full opacity-50"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-[#020202] via-transparent to-[#020202] opacity-90"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10 w-full flex-grow">
    <div class="text-center mb-20 space-y-4">
      <div class="flex items-center justify-center gap-4 mb-2">
        <div class="h-[2px] w-12 bg-[#107C10] shadow-[0_0_15px_#107C10]"></div>
        <span class="text-[#faca54] text-sm font-bold uppercase tracking-[0.5em]">Start Your Engine</span>
        <div class="h-[2px] w-12 bg-[#2b42f4] shadow-[0_0_15px_#2b42f4]"></div>
      </div>
      
      <h2 class="text-6xl md:text-8xl font-black italic uppercase leading-none text-white drop-shadow-2xl">
        ¡Empieza a <br />
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#2b42f4] via-[#faca54] to-[#107C10]">
          Jugar Ya!
        </span>
      </h2>
    </div>

    <div class="grid md:grid-cols-2 gap-12 max-w-5xl mx-auto">
      
      <div class="group relative bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-[#2b42f4]/50 transition-all duration-500 shadow-2xl">
        <div class="absolute -inset-1 bg-gradient-to-b from-[#2b42f4]/25 to-transparent rounded-2xl blur opacity-0 group-hover:opacity-100 transition duration-500"></div>
        
        <div class="relative z-10">
          <div class="absolute -inset-4 bg-[#2b42f4]/5 blur-2xl rounded-full opacity-30"></div>
          <img
            src="/GCU3/PS5_Rennsport_2D_PEGI.png"
            alt="RENNSPORT PS5"
            class="relative w-full h-auto rounded-lg shadow-[0_20px_50px_rgba(0,0,0,0.5)] transform group-hover:scale-[1.02] transition-transform duration-500"
          />
          
          <div class="mt-8 flex items-center justify-center">
            <p class="text-[#2b42f4] font-bold uppercase tracking-widest text-sm border-t border-white/10 pt-4 w-full text-center drop-shadow-[0_0_8px_rgba(43,66,244,0.4)]">
              Próximamente disponible
            </p>
          </div>
        </div>
      </div>

      <div class="group relative bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-[#107C10]/50 transition-all duration-500 shadow-2xl">
        <div class="absolute -inset-1 bg-gradient-to-b from-[#107C10]/30 to-transparent rounded-2xl blur opacity-0 group-hover:opacity-100 transition duration-500"></div>
        
        <div class="relative z-10">
          <div class="absolute -inset-4 bg-[#107C10]/10 blur-2xl rounded-full opacity-50"></div>
          
          <img
            src="/GCU3/XBOX_Rennsport_2D_PEGI.png"
            alt="RENNSPORT Xbox"
            class="relative w-full h-auto rounded-lg shadow-[0_20px_50px_rgba(16,124,16,0.3)] transform group-hover:scale-[1.02] transition-transform duration-500"
          />
          
          <div class="mt-8 flex items-center justify-center">
            <p class="text-[#107C10] font-bold uppercase tracking-widest text-sm border-t border-white/10 pt-4 w-full text-center drop-shadow-[0_0_8px_rgba(16,124,16,0.4)]">
              Próximamente disponible
            </p>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  .games-section {
    contain: paint;
  }
</style>