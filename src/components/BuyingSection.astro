---
import Footer from "./Footer.astro";
---

<section
  id="games"
  class="games-section min-h-screen flex flex-col relative justify-between"
  style="background-image: url('/mejorbg.png'); background-size: cover; background-position: center; background-repeat: no-repeat; margin: 0; padding: 32px 16px 16px 16px;"
>
  <div class="flex items-center justify-center pt-4">
    <h2 class="text-4xl font-semibold text-gray-200 mb-14 text-center">
      ¡EMPIEZA A JUGAR YA!
    </h2>
  </div>
  <div class="max-w-7xl mx-auto text-center">
    <!-- Título principal -->

    <!-- Grid de versiones del juego -->
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Versión PlayStation 5 -->
      <div
        class="bg-gray-900 rounded-lg p-6 border border-gray-700 hover:border-blue-500 transition-all duration-300"
      >
        <div class="mb-6">
          <img
            src="/PS5_Rennsport_2D_PEGI.png"
            alt="RENNSPORT PS5"
            class="w-full h-auto rounded-lg shadow-lg"
          />
        </div>

        <!-- Enlaces de retailers para PS5 -->
        <div class="flex flex-col md:flex-row gap-4">
          <a
            href="https://www.game.es/rennsport-playstation-5-251267"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img src="game.webp" alt="GAME" class="inline h-12" />
          </a>

          <a
            href="https://www.game.es/rennsport-playstation-5-251267"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img src="corteingles.webp" alt="GAME" class="inline h-8" />
          </a>

          <a
            href="https://www.game.es/rennsport-playstation-5-251267"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img src="fnac.webp" alt="GAME" class="inline h-8" />
          </a>

          <a
            href="https://www.game.es/rennsport-playstation-5-251267"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img src="mediamarkt.webp" alt="GAME" class="inline pb-8 h-20" />
          </a>
        </div>
      </div>

      <!-- Versión Xbox -->
      <div
        class="bg-gray-900 rounded-lg p-6 border border-gray-700 hover:border-green-500 transition-all duration-300"
      >
        <div class="mb-6">
          <img
            src="XBOX_Rennsport_2D_PEGI.png"
            alt="RENNSPORT Xbox"
            class="w-full h-auto rounded-lg shadow-lg"
          />
        </div>
      </div>
    </div>
  </div>

  <div class="text-center mt-auto">
    <Footer />
  </div>
</section>

<style>
  .games-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 150px;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.8) 0%,
      transparent 100%
    );
    pointer-events: none;
    z-index: 1;
  }

  .games-section > div {
    position: relative;
    z-index: 2;
  }
</style>
